mkdir /$PATH
sudo semanage fcontext -a -t container_file_t '/$PATH(/.*)?'
sudo restorecon -Rv /$PATH
podman unshare chown -R 27:27 /$PATH

podman save [-o FILE_NAME] IMAGE_NAME[:TAG]
podman load [-i FILE_NAME]

podman commit [OPTIONS] CONTAINER [REPOSITORY[:PORT]/]IMAGE_NAME[:TAG]
podman commit -a 'Your Name' official-nginx do180/mynginx:v1.0-SNAPSHOT

podman inspect -f "{{range .Mounts}}{{println .Destination}}{{end}}" CONTAINER_NAME/ID

podman push [OPTIONS] IMAGE [DESTINATION]

podman exec -it [CONTAINER]


